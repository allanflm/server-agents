GET {{baseurl}}/health

###


# Get rooms
# @name getRooms
GET {{baseurl}}/rooms


###

# Create Room
# @name createRoom
POST {{baseurl}}/rooms
Accept: application/json
Content-Type: application/json

{
    "name": "Sala de teste",
    "description": "Essa é uma sala de teste "
